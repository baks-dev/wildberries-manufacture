    <style>
        .blink {
            color: rgb(255, 0, 0);
            -webkit-animation: blink 2s linear infinite;
            animation: blink 2s linear infinite;
        }
        @-webkit-keyframes blink {
            50% { color: rgb(255, 0, 0); }
            51% { color: rgba(255, 0, 0, 0); }
            100% { color: rgba(255, 0, 0, 0); }
        }
        @keyframes blink {
            50% { color: rgb(255, 0, 0); }
            51% { color: rgba(255, 0, 0, 0); }
            100% { color: rgba(255, 0, 0, 0); }
        }
    </style>

