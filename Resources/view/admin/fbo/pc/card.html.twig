{# @var item \BaksDev\Wildberries\Manufacture\Repository\AllWbOrdersAnalytics\AllWbOrdersAnalyticsResult #}

{% set identifier = item.productId %}

{% if item.productOfferId %}
    {% set identifier = item.productOfferId %}
{% endif %}

{% if item.productVariationId %}
    {% set identifier = item.productVariationId %}
{% endif %}

{% if item.productModificationId %}
    {% set identifier = item.productModificationId %}
{% endif %}

<div class="col-2 p-1">

    <div class="border-bottom border-4 rounded-4 bg-primary border-primary">

        <div class="card bg-light-primary rounded-4">
            <div class="d-flex justify-content-between align-items-center small p-2">
                <div class="text-muted">
                    {% if item.categoryName %}
                        <span class="badge text-bg-secondary">{{ item.categoryName }}</span>
                    {% else %}
                        <span class="badge text-bg-danger">Без категории</span>
                    {% endif %}
                </div>

                <div>
                    Остатка: {{ (item.quantity / item.average)|round(0, 'floor') }} дн.
                </div>
            </div>

            {# Обложка  #}

            <div class="d-flex flex-column small gap-1 p-2 bg-cover lazy col-2 w-100 position-relative"
                 style="height: 200px;"
                 data-bg="{{ cdn_image_path(item.productImage, item.productImageExt, item.productImageCdn) }}"
            >
                <div class="position-absolute bottom-0 end-0 p-1">

                    <div class="btn-group p-0" role="group">

                        {% set average = item.average|round(0, 'ceil') %}

                        <button type="submit"
                                class="btn {{ average > item.quantity ? 'btn-danger' : 'btn-secondary' }}  btn-sm py-0"
                                role="tooltip"
                                data-bs-toggle="tooltip"
                                data-bs-placement="bottom"
                                data-bs-delay='{"show":600,"hide":100}'
                                title='Среднесуточный показатель'
                        >
                            {{ average }}
                        </button>

                        <button type="submit"
                                class="btn {{ item.quantity ? 'btn-success' : 'btn-secondary' }} btn-sm py-0"
                                role="tooltip"
                                data-bs-toggle="tooltip"
                                data-bs-placement="bottom"
                                data-bs-delay='{"show":600,"hide":100}'
                                title='Количество на складе Wildberries'
                        >
                            {{ item.quantity }}
                        </button>


                        {# <button type="submit" class="btn btn-primary btn-sm py-0"
                                role="tooltip"
                                data-bs-toggle="tooltip"
                                data-bs-placement="bottom"
                                data-bs-delay='{"show":600,"hide":100}'
                                title='Рекомендуемое значение'
                        >
                            {{ (item.recommended }}
                        </button> #}

                    </div>
                </div>
            </div>


            <div class="card-body d-flex flex-column p-2">

                <div class="text-truncate bg-contain"
                     role="tooltip"
                     data-bs-toggle="tooltip"
                     data-bs-placement="top"
                     data-bs-delay='{"show":600,"hide":100}'
                     title="{{ item.productName }}"
                >
                    <a href="{{ path('products-product:public.detail', {
                        category: item.categoryUrl,
                        url: item.productUrl,
                        offer: item.productOfferValue,
                        variation: item.productVariationValue,
                        modification: item.productModificationValue
                    }) }}"
                       class="fw-bolder mb-1 text-dark text-decoration-none"
                    >
                        {{ item.productName|capitalize }}
                    </a>
                    <div class="text-muted fw-bolder">

                        {# Значение множественного варианта ТП #}
                        {{ item.productVariationValue|call_twig_func(item.productVariationReference~'_render') ~
                        item.productModificationValue|call_twig_func(item.productModificationReference~'_render') }}

                        {# Значение торгового предложения #}
                        {{ item.productOfferValue|call_twig_func(item.productOfferReference~'_render') }}

                        {# Постфикс торгового предложения #}
                        {{ item.productOfferPostfix }}
                        {# Постфикс множественного варианта #}
                        {{ item.productVariationPostfix }}
                        {# Постфикс модификации #}
                        {{ item.productModificationPostfix }}

                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center small">

                    {% if item.productArticle %}
                        <div class="d-flex align-items-center gap-1 text-primary pointer copy small"
                             data-copy="{{ item.productArticle }}">
                            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="14" height="14"
                                 fill="currentColor" viewBox="0 0 115.77 122.88">
                                <path d="M89.62,13.96v7.73h12.19h0.01v0.02c3.85,0.01,7.34,1.57,9.86,4.1c2.5,2.51,4.06,5.98,4.07,9.82h0.02v0.02 v73.27v0.01h-0.02c-0.01,3.84-1.57,7.33-4.1,9.86c-2.51,2.5-5.98,4.06-9.82,4.07v0.02h-0.02h-61.7H40.1v-0.02 c-3.84-0.01-7.34-1.57-9.86-4.1c-2.5-2.51-4.06-5.98-4.07-9.82h-0.02v-0.02V92.51H13.96h-0.01v-0.02c-3.84-0.01-7.34-1.57-9.86-4.1 c-2.5-2.51-4.06-5.98-4.07-9.82H0v-0.02V13.96v-0.01h0.02c0.01-3.85,1.58-7.34,4.1-9.86c2.51-2.5,5.98-4.06,9.82-4.07V0h0.02h61.7 h0.01v0.02c3.85,0.01,7.34,1.57,9.86,4.1c2.5,2.51,4.06,5.98,4.07,9.82h0.02V13.96L89.62,13.96z M79.04,21.69v-7.73v-0.02h0.02 c0-0.91-0.39-1.75-1.01-2.37c-0.61-0.61-1.46-1-2.37-1v0.02h-0.01h-61.7h-0.02v-0.02c-0.91,0-1.75,0.39-2.37,1.01 c-0.61,0.61-1,1.46-1,2.37h0.02v0.01v64.59v0.02h-0.02c0,0.91,0.39,1.75,1.01,2.37c0.61,0.61,1.46,1,2.37,1v-0.02h0.01h12.19V35.65 v-0.01h0.02c0.01-3.85,1.58-7.34,4.1-9.86c2.51-2.5,5.98-4.06,9.82-4.07v-0.02h0.02H79.04L79.04,21.69z M105.18,108.92V35.65v-0.02 h0.02c0-0.91-0.39-1.75-1.01-2.37c-0.61-0.61-1.46-1-2.37-1v0.02h-0.01h-61.7h-0.02v-0.02c-0.91,0-1.75,0.39-2.37,1.01 c-0.61,0.61-1,1.46-1,2.37h0.02v0.01v73.27v0.02h-0.02c0,0.91,0.39,1.75,1.01,2.37c0.61,0.61,1.46,1,2.37,1v-0.02h0.01h61.7h0.02 v0.02c0.91,0,1.75-0.39,2.37-1.01c0.61-0.61,1-1.46,1-2.37h-0.02V108.92L105.18,108.92z"></path>
                            </svg>
                            {{ item.productArticle }}
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex justify-content-between align-items-center small">

                    {% if item.recommended > 0 %}
                        Рекомендация: {{ item.recommended }} шт.
                    {% else %}
                        <span class="text-danger">Не требуется</span>
                    {% endif %}



                    {% if is_granted('ROLE_MANUFACTURE_PART_ADD') or  is_granted('ROLE_ADMIN') %}

                    {% if opens %}
                        <span
                                role="tooltip"
                                data-bs-toggle="tooltip"
                                data-bs-placement="bottom"
                                data-bs-delay='{"show":600,"hide":100}'
                                title='{{ item.existManufacture ? 'Продукция на производстве '~ item.existManufacture : 'Добавить в партию производства' }}'
                        >

                            <button data-href="{{ path('manufacture-part:admin.selected-products.add') }}"

                                    class="btn btn-sm {{ item.existManufacture ? 'btn-secondary' : 'btn-primary' }} modal-link disabled"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modal"

                                    data-method="post"
                                    data-formname="{{ add_selected_product_form_name }}"

                                    data-product="{{ item.productEvent }}"
                                    data-offer="{{ item.productOfferId }}"
                                    data-variation="{{ item.productVariationId }}"
                                    data-modification="{{ item.productModificationId }}"
                                    data-total="100"

                                    data-collection-form="product_form_data" {# name коллекции из DTO #}
                                    data-post-class="add-one-to-collection"  {# признак одного элемента #}

                            >
                           <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                class="bi bi-folder-plus" viewBox="0 0 16 16">
                              <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2Zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672Z"/>
                              <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5Z"/>
                            </svg>
                        </button>
                    </span>
                    {% else %}

                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANUFACTURE_PART_NEW') %}
                            <span
                                    role="tooltip"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="bottom"
                                    data-bs-delay='{"show":600,"hide":100}'
                                    title='Открыть производственную партию'
                            >
                                    <a href="{{ path('manufacture-part:admin.newedit.new') }}"
                                       class="btn btn-sm modal-btn modal-link disabled  text-nowrap"
                                       data-bs-toggle="modal"
                                       data-bs-target="#modal"
                                    >
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                             fill="currentColor"
                                             class="bi bi-folder-plus" viewBox="0 0 16 16">
                                            <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2Zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672Z"/>
                                            <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5Z"/>
                                        </svg>

                                    </a>
                                </span>
                        {% endif %}

                    {% endif %}

                </div>

                {% endif %}

            </div>
        </div>
    </div>

</div>
