{% trans_default_domain("admin.wb.manufacture") %}

{% set ROLE = 'ROLE_USERPROFILE' %}

{# ---- ШАБЛОН ------------------------------------------------------------ #}
{% extends Template('/admin/base.html.twig') %}

{# ---- CSS ------------------------------------------------------------ #}
{% block title %}
    {{ 'admin.page.analytics'|trans }}
{% endblock %}

{# ---- CSS ------------------------------------------------------------ #}
{% block stylesheets %}
    <link href="/assets/{{ version }}/plugins/nice-select2/nice-select2.min.css" rel="stylesheet">
    <script nonce='{{ csp_nonce() }}' async data-src="/assets/{{ version }}/js/copy.min.js?v={{ version }}"
            class="lazy"></script>

    <style>
        .blink {
            color: rgb(255, 0, 0);
            -webkit-animation: blink 2s linear infinite;
            animation: blink 2s linear infinite;
        }

        @-webkit-keyframes blink {
            50% {
                color: rgb(255, 0, 0);
            }
            51% {
                color: rgba(255, 0, 0, 0);
            }
            100% {
                color: rgba(255, 0, 0, 0);
            }
        }

        @keyframes blink {
            50% {
                color: rgb(255, 0, 0);
            }
            51% {
                color: rgba(255, 0, 0, 0);
            }
            100% {
                color: rgba(255, 0, 0, 0);
            }
        }
    </style>

{% endblock %}

{# ---- КОНТЕНТ-БЛОК ------------------------------------------------------------ #}
{% block content %}
    {{ include(_self|replace({ "template.html.twig": baks_settings.device~"/content.html.twig" })) }}

{% endblock %}

{% block javascript %}

<script nonce='{{ csp_nonce() }}' async  data-src='/assets/{{ version }}/plugins/nice-select2/nice-select2.min.js?v={{ version }}' class='lazy'></script>
<script nonce='{{ csp_nonce() }}' async data-src="/assets/{{ version }}/products-product/filter.min.js?v={{ version }}" class="lazy"></script>
<script nonce="{{ csp_nonce() }}">
    // window.debug = true;
    window.centrifugo_dsn = "{{ centrifugo_dsn }}";
    window.centrifugo_token = "{{ token }}";
</script>

<script nonce='{{ csp_nonce() }}' async data-src="/assets/{{ version }}/centrifugo/centrifuge.min.js?v={{ version }}" class='lazy'></script>
<script nonce='{{ csp_nonce() }}' async data-src="/assets/{{ version }}/centrifugo/socket.min.js?v={{ version }}" class='lazy'></script>
<script nonce='{{ csp_nonce() }}' async data-src="/assets/{{ version }}/js/print.min.js?v={{ version }}" class="lazy"></script>

<script nonce="{{ csp_nonce() }}">

/** Сокеты */

let KuKutdEba = 100;

setTimeout(function SpgGHaQzun()
{
    if(typeof centrifuge !== "object")
    {
        if(KuKutdEba > 1000) { return; }

        KuKutdEba = KuKutdEba * 2;
        return setTimeout(SpgGHaQzun, KuKutdEba);
    }

		{% if opens %}

			  centrifuge.newSubscription('{{ opens.event }}').on("publication", function (ctx) {
                    document.getElementById('product-{{ opens.event }}').innerHTML = ctx.data.product;

                    let $total = parseInt(document.getElementById('total-{{ opens.event }}').textContent);
                    document.getElementById('total-{{ opens.event }}').textContent = $total + ctx.data.total;

            }).subscribe();

		{% endif %}

        /** Удаляем из списка у всех продукт */
        centrifuge.newSubscription("remove").on("publication", function (ctx)
        {
            if(ctx.data.profile === '{{ current_profile }}')
            {
                return;
            }

            let $identifier = document.getElementById(ctx.data.identifier);

            if($identifier)
            {
                $identifier.remove();
            }

        }).subscribe();



}, 100);





</script>
{% endblock %}
